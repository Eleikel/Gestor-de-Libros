@using Library.Core.Applicantion.ViewModels.Book
@model List<BookViewModel>
@{
    ViewData["Title"] = "Books";
}

<div class="container-fluid">

    <div class="row mb-3 mt-4">
        <div class="col-3 offset-9">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary fw-bold">Añadir Libro</a>
        </div>
    </div>
    <div class="row">

        <div class="col">
            <h2 class="text-center mb-5 display-4"> Libros en el Sistemas</h2>
        </div>
    </div>



    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h3>No hay Libros Creados</h3>
        }
        else
        {
            @foreach (BookViewModel item in Model)
            {
                <div class="col-4">

                    <figure class="user-card teal shadow-lg">
                        <figcaption>
                            <h4>Title: @item.Title</h4>
                            <p>ISBN CODE: @item.ISBNCode</p>
                            <p>Page Number: @item.PageNumber</p>
                            <p>Publication Year: @item.ISBNCode</p>
                            <p>Product Condition: @item.ISBNCode</p>

                            <p class="mt-2 mb-3 text-muted font-weight-bold">Price: @item.Price</p>
                            <div class="clearfix">
                                <a asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-labeled btn-primary">
                                    <span class="btn-label">
                                        <i class="fa fa-edit"></i>
                                    </span>Editar
                                </a>

                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-labeled btn-danger">
                                    <span class="btn-label">
                                        <i class="fa fa-times"></i>
                                    </span>Eliminar
                                </a>
                            </div>
                        </figcaption>
                    </figure>

                </div>
            }
        }
    </div>

</div>